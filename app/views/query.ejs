<!DOCTYPE html>
<html lang="en" ng-app="query">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Task Visualizer</title>

    <% include dependencies %>

    <script src="js/query.js"></script>
    <link rel="stylesheet" href="css/general.css">
</head>
<body ng-controller="query-body">
<% include navbar %>
    <div ng-if="query_interface" class="panel panel-default content-div">
        <div class="panel-heading">
            <h3>Query Builder</h3>
        </div>
        <div class="panel-body">
            <p>
                Start Date:
                <a href="#" editable-combodate="query.startdate">
                    {{ (query.startdate | date:"medium") || 'Click to enter start date' }}
                </a>
            </p>

            <p>
                End Date:
                <a href="#" editable-combodate="query.enddate">
                    {{ (query.enddate | date:"medium") || 'Click to enter end date' }}
                </a>
            </p>

            <ul class="list-group">
                <li ng-repeat="channel in query.channels" class="list-group-item" editable-text="channel.channel">
                    {{ channel.channel || 'Click to enter channel name' }}
                </li>
            </ul>
            <button class="btn btn-default bottom-margin-element" ng-click="addQueryChannel()">Add Channel</button>

            <ul class="list-group">
                <li ng-repeat="sender in query.senders" class="list-group-item" editable-text="sender.sender">
                    {{ sender.sender || 'Click to enter sender name' }}
                </li>
            </ul>
            <button class="btn btn-default bottom-margin-element" ng-click="addQuerySender()">Add Sender</button>

            <ul class="list-group">
                <li ng-repeat="param in query.params" class="list-group-item" editable-text="param.param">
                    {{ param.param || 'Click to enter param' }}
                </li>
            </ul>
            <button class="btn btn-default" ng-click="addQueryParam()">Add Param</button>

            <div class="top-margin-element">
                <button class="btn btn-default" ng-click="executeQuery()">Execute Query</button>
                <button  class="btn btn-default" ng-click="finishQuery()">Cancel</button>
            </div>
        </div>
    </div>
    <% include footer %>
</body>
</html>