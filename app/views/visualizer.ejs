<!DOCTYPE html>
<html lang="en" ng-app="visualizer">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Task Visualizer</title>

    <% include dependencies %>

    <script src="js/visualizer.js"></script>
    <link rel="stylesheet" href="css/general.css">
</head>
<body ng-controller="visualizer-body">
<% include navbar %>
    <div ng-if="view_task" class="panel panel-default descDiv">
        <div class="panel-heading">
            <h3>Task List</h3>
        </div>
        <div class="panel-body">
            <div class="list-group">
                <a class="list-group-item" href="#" ng-click="visualizeTask(task)" ng-repeat="task in tasks_global" >
                    <h3 id="titleoverride" class="list-group-item-heading">{{task.name}}</h3>
                    <p class="list-group-item-text">
                    <h4>Channels</h4>
                    <ul class="summary-list">
                        <li ng-repeat="channel in task.channels">{{channel.channel}}</li>
                    </ul>
                    <h4>Models</h4>
                    <ul class="summary-list">
                        <li ng-repeat="model in task.models">{{model.name}}</li>
                    </ul>
                    </p>
                </a>
            </div>
            <button class="btn btn-default" ng-click="queryInterface()">Custom Query</button>
        </div>
    </div>
    <div ng-if="visualize_task" class="panel panel-default descDiv">
        <div class="panel-heading">
            <h3>{{task.name}}</h3>
        </div>
        <div class="panel-body">
            <button class="btn btn-default bottom-margin-element" ng-click="finishVisualization()">Done</button>
            <div ng-repeat="model in task.models" class="panel panel-default">
                <div class="panel-heading">
                    <h3>{{model.name}}</h3>
                </div>
                <div class="panel-body">
                    <div ng-repeat="channel in task.channels" class="panel panel-default">
                        <div class="panel-heading">
                            <h3>{{channel.channel}} Local Aggregate</h3>
                        </div>
                        <div class="panel-body">
                            <canvas class="chart chart-pie"
                                    chart-data="resolveChartData('channelLocalAggregate', task.name, model.name, channel.channel)"
                                    chart-labels="resolveChartLabel('channelLocalAggregate', task.name, model.name, channel.channel)"
                                    chart-type="type"
                                    chart-legend="true">
                            </canvas>
                        </div>
                    </div>
                    <div ng-repeat="param in model.params" class="panel panel-default">
                        <div class="panel-heading">
                            <h3>{{param.param}} cross channel aggregation</h3>
                        </div>
                        <div class="panel-body">
                            <canvas class="chart chart-pie"
                                    chart-data="resolveChartData('paramChannelAggregate', task.name, model.name, param.param)"
                                    chart-labels="resolveChartLabel('paramChannelAggregate', task.name, model.name, param.param)"
                                    chart-type="type"
                                    chart-legend="true">
                            </canvas>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3>Global param allocation</h3>
                        </div>
                        <div class="panel-body">
                            <canvas class="chart chart-pie"
                                    chart-data="resolveChartData('paramGlobalAggregate', task.name, model.name)"
                                    chart-labels="resolveChartLabel('paramGlobalAggregate', task.name, model.name)"
                                    chart-type="type"
                                    chart-legend="true">
                            </canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div ng-if="query_interface" class="panel panel-default descDiv">
        <div class="panel-heading">
            <h3>Query Builder</h3>
        </div>
        <div class="panel-body">
            <p>
                Start Date:
                <a href="#" editable-combodate="query.startdate">
                    {{ (query.startdate | date:"medium") || 'empty' }}
                </a>
            </p>

            <p>
                End Date:
                <a href="#" editable-combodate="query.enddate">
                    {{ (query.enddate | date:"medium") || 'empty' }}
                </a>
            </p>

            <ul class="list-group">
                <li ng-repeat="channel in query.channels" class="list-group-item" editable-text="channel.channel">
                    {{ channel.channel || 'Click to enter channel name' }}
                </li>
            </ul>
            <button class="btn btn-default bottom-margin-element" ng-click="addQueryChannel()">Add Channel</button>

            <ul class="list-group">
                <li ng-repeat="sender in query.senders" class="list-group-item" editable-text="sender.sender">
                    {{ sender.sender || 'Click to enter sender name' }}
                </li>
            </ul>
            <button class="btn btn-default bottom-margin-element" ng-click="addQuerySender()">Add Sender</button>

            <ul class="list-group">
                <li ng-repeat="param in query.params" class="list-group-item" editable-text="param.param">
                    {{ param.param || 'Click to enter param' }}
                </li>
            </ul>
            <button class="btn btn-default" ng-click="addQueryParam()">Add Param</button>

            <div class="top-margin-element">
                <button class="btn btn-default" ng-click="executeQuery()">Execute Query</button>
                <button  class="btn btn-default" ng-click="finishQuery()">Cancel</button>
            </div>
        </div>
    </div>
    <% include footer %>
</body>
</html>